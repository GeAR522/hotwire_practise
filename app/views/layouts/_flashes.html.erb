<% if notice.present? %>
  <p id="flash-message" data-controller="flash" class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg fixed top-100px" id="notice"><%= notice %></p>
<% end %>
<% if alert.present? %>
  <p id="flash-message" data-controller="flash" class="py-2 px-3 bg-red-50 mb-5 text-red-500 font-medium rounded-lg fixed top-100px" id="alert"><%= alert %></p>
<% end %>
